<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculator"
    android:background="@drawable/orange_gradient_background"
    android:id="@+id/mainScreen">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/BackgroundButton"
        android:textSize="20sp"
        android:fontFamily="@font/heebo_light"
        android:background="@android:color/transparent"
        android:text="Background"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="10dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/LogOut"
        android:textSize="20sp"
        android:fontFamily="@font/heebo_light"
        android:background="@android:color/transparent"
        android:text="Log Out"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:layout_marginTop="50dp"
            android:orientation="vertical">


            <TextView
                android:autoSizePresetSizes="40sp"
                android:autoSizeTextType="uniform"
                android:id="@+id/inputText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:maxLines="1"
                android:text=""
                android:textSize="40sp"
                android:gravity="end"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:fontFamily="@font/heebo_light"
                android:textColor="@color/white"/>

            <TextView
                android:autoSizePresetSizes="80sp"
                android:autoSizeTextType="uniform"
                android:id="@+id/outputText"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:maxLines="1"
                android:text=""
                android:textSize="80sp"
                android:gravity="end"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:fontFamily="@font/heebo_thin"
                android:textColor="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:layout_marginTop="10dp">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ButtonPlus"
                    android:scaleX="0.85"
                    android:scaleY="0.95"
                    android:layout_marginVertical="10dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/outlined_circle"
                    android:text="+"
                    android:textSize="50sp"
                    android:fontFamily="@font/heebo_thin"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ButtonMinus"
                    android:scaleX="0.85"
                    android:scaleY="0.95"
                    android:layout_marginVertical="10dp"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/outlined_circle"
                    android:text="-"
                    android:textSize="50sp"
                    android:fontFamily="@font/heebo_thin" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ButtonMultiply"
                    android:scaleX="0.85"
                    android:scaleY="0.95"
                    android:layout_marginVertical="10dp"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/outlined_circle"
                    android:text="X"
                    android:textSize="40sp"
                    android:fontFamily="@font/heebo_thin"
                    android:textAllCaps="false" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ButtonDivide"
                    android:scaleX="0.85"
                    android:scaleY="0.95"
                    android:layout_marginVertical="10dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/outlined_circle"
                    android:text="รท"
                    android:textSize="50sp"
                    android:fontFamily="@font/heebo_thin"
                    android:textAllCaps="false" />




            </LinearLayout>





        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Button7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="7"
                    android:fontFamily="@font/heebo_light"
                    android:textSize="35sp"
                    android:background="@android:color/transparent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Button4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="4"
                    android:fontFamily="@font/heebo_light"
                    android:textSize="35sp"
                    android:background="@android:color/transparent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Button1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:fontFamily="@font/heebo_light"
                    android:textSize="35sp"
                    android:background="@android:color/transparent"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Button0"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:fontFamily="@font/heebo_light"
                    android:textSize="35sp"
                    android:background="@android:color/transparent"/>



            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Button8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="8"
                    android:fontFamily="@font/heebo_light"
                    android:textSize="35sp"
                    android:background="@android:color/transparent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Button5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="5"
                    android:fontFamily="@font/heebo_light"
                    android:textSize="35sp"
                    android:background="@android:color/transparent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Button2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:fontFamily="@font/heebo_light"
                    android:textSize="35sp"
                    android:background="@android:color/transparent"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ButtonDot"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="."
                    android:fontFamily="@font/heebo_light"
                    android:textSize="35sp"
                    android:background="@android:color/transparent"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Button9"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="9"
                    android:fontFamily="@font/heebo_light"
                    android:textSize="35sp"
                    android:background="@android:color/transparent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Button6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="6"
                    android:fontFamily="@font/heebo_light"
                    android:textSize="35sp"
                    android:background="@android:color/transparent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Button3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="3"
                    android:fontFamily="@font/heebo_light"
                    android:textSize="35sp"
                    android:background="@android:color/transparent"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Button00"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="00"
                    android:fontFamily="@font/heebo_light"
                    android:textSize="35sp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/white"/>


            </LinearLayout>





            <LinearLayout
                android:layout_marginEnd="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="20dp">

                <ImageButton
                    android:id="@+id/ButtonBack"
                    android:scaleY="0.6"
                    android:scaleX="0.6"
                    android:background="@drawable/ic_baseline_backspace_24"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ButtonEqual"
                    android:scaleY="0.8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:text="="
                    android:fontFamily="@font/heebo_light"
                    android:textSize="90sp"
                    android:background="@drawable/equal_button"
                    android:textColor="@android:color/holo_orange_dark" />







            </LinearLayout>


        </LinearLayout>


    </LinearLayout>




</FrameLayout>